{
  "version": 8,
  "name": "Hybrid Dark Style - Raster Base + Vector Overlays",
  "sources": {
    "osm-raster": {
      "type": "raster",
      "tiles": [
        "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 19,
      "attribution": "Â© OpenStreetMap contributors"
    },
    "maplibre-vector": {
      "url": "https://demotiles.maplibre.org/tiles/tiles.json",
      "type": "vector"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#1a1a1a"
      }
    },
    {
      "id": "osm-base",
      "type": "raster",
      "source": "osm-raster",
      "paint": {
        "raster-opacity": 0.6,
        "raster-brightness-min": 0.1,
        "raster-brightness-max": 0.3,
        "raster-contrast": 0.3,
        "raster-saturation": -0.7,
        "raster-hue-rotate": 200
      }
    },
    {
      "id": "countries-overlay",
      "type": "line",
      "source": "maplibre-vector",
      "source-layer": "countries",
      "paint": {
        "line-color": "#60a5fa",
        "line-width": 2,
        "line-opacity": 0.8
      }
    },
    {
      "id": "geolines-overlay",
      "type": "line",
      "source": "maplibre-vector",
      "source-layer": "geolines",
      "paint": {
        "line-color": "#fbbf24",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 1,
          12, 2
        ],
        "line-opacity": 0.7
      }
    },
    {
      "id": "centroids-overlay",
      "type": "circle",
      "source": "maplibre-vector",
      "source-layer": "centroids",
      "paint": {
        "circle-color": "#f59e0b",
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6, 3,
          12, 6
        ],
        "circle-opacity": 0.9,
        "circle-stroke-color": "#ffffff",
        "circle-stroke-width": 1
      }
    }
  ]
}